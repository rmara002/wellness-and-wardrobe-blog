<!doctype html>
<html>
  <head>
    <title>Register for <%=siteName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <!-- Add the image at the top -->
    <div class="logo-container"><img src="../images/blog logo.png" alt="Blog Website Logo" class="logo-pic"></div>

    <!-- <h1>Welcome to <%=siteName%></h1> -->

    <!-- Wrap links in a nav element -->
    <nav>
        <a href="/" class="nav-links">Home</a>
        <a href="about" class="nav-links">About <%=siteName%></a>
        <a href="register" class="nav-links">Register with us</a>
        <a href="listusers" class="nav-links">List users</a>
        <a href="login" class="nav-links">Login</a>
        <a href="deleteuser" class="nav-links">Delete User</a>
        <a href="logout" class="nav-links">Logout</a>
    </nav>

    <h1>Register for <%=siteName%></h1>
    <form method="POST" action="/registered">
        <p>First name: <input id="first" type="text" name="first" value="first name" /></p>
        <p>Last name: <input id="last" type="text" name="last" value="last name" /></p>
        <p>Email: <input id="email" type="email" name="email" value="email" /></p>
         <!-- Add a username input field here -->
         <p>Username: <input id="username" type="text" name="username" value="username" /></p>
         <!-- Add a password input field here -->
         <p>Password: <input id="password" type="password" name="password" /></p>
        <input type="submit" value="Register" />
      </form>
  </body>
</html>